<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/our_gray">

    <TextView
        android:id="@+id/list_heading"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Find your colleagues"
        android:textSize="24sp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:paddingVertical="8dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="60dp"
        android:orientation="horizontal"
        android:paddingHorizontal="10dp">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:src="@drawable/ic_search_foreground"/>

        <EditText
            android:id="@+id/txt_search_users"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="5"
            android:hint="Search Names..."
            android:textColorHint="@color/faded_gray"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btn_filter"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="2"
            android:text="FILTER"
            android:backgroundTint="@color/our_black"/>



    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/students_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="120dp"
        android:scrollbars="vertical"
        android:scrollbarThumbVertical="@color/our_yellow"
        android:scrollbarSize="2dp"
        />



</androidx.cardview.widget.CardView>